/* pages/search/search.wxss */
.scbg{
  width: 100%;
  height: 55%;
  left: 0rpx;
  right: 0rpx;
  top: 350rpx;
  position: absolute;
}
.head
{
  font-size: 60rpx;
  text-align: center;
  padding:40rpx;
  position: relative;
  display: flex;
  flex-direction: row;
}
.back
{
  position: relative;
  height: 30px;
  width: 30px;
}
.title
{
  position: relative;
  left:180rpx;
}
.select_no
{
  position: relative;
  left:0rpx;
}
.title_select
{
  position: relative;
  left:100rpx;
}
.select_all
{
  position: relative;
  left:200rpx;
}

.firstblock {
  position: relative;
  display: flex;
  flex-direction: row;
  top: 5px;
}

.people {
  justify-content: flex-end;
  align-items: flex-end;
  font-size: 15px;
  left: 130px;
  position: relative;
}

.showname {
  font-size: 10px;
  position: relative;
  top: 3px;
}

.showdownload {
  font-size: 10px;
  position: relative;
  top: 3px;
  left: 100px;
}

.secondblock {
  position: relative;
  display: flex;
  flex-direction: row;
}

.left_icon {
  width: 40px;
  height: 40px;
  position: relative;
  padding: 10px;
}

.detail_icon {
  width: 15px;
  height: 15px;
  position: relative;
  top: 8px;
  left: 100px;
}

.radio {
  left: 115px;
  position: relative;
  transform: scale(0.5);
  top: 3px;
}

.showtime {
  font-size: 10px;
  top: 5px;
  position: relative;
}

.showdate {
  font-size: 10px;
  top: 5px;
  position: relative;
}

.itemblock {
  position: relative;
  display: flex;
  flex-direction: row;
}
.note
{
  font-size:10px;
}